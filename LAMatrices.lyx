\begin_inset Formula 
\[
A\mathbf{x}=\mathbf{a}_{1}x_{1}+\mathbf{a}_{2}x_{2}+\cdots+\mathbf{a}_{n}x_{n}.
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


